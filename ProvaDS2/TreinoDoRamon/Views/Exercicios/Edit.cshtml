@model TreinoDoRamon.Models.Exercicio

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Exercicio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExercicioId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome do Exercício:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repeticoes" class="control-label">N° de repetições:</label>
                <input asp-for="Repeticoes" class="form-control" />
                <span asp-validation-for="Repeticoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serie" class="control-label">N° de series:</label>
                <input asp-for="Serie" class="form-control" />
                <span asp-validation-for="Serie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tempomax" class="control-label">Tempo máximo para execução de exercício: (minutos)</label>
                <input asp-for="Tempomax" class="form-control" />
                <span asp-validation-for="Tempomax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EquipamentoId" class="control-label">Equipamento:</label>
                <select asp-for="EquipamentoId" class ="form-control" asp-items="ViewBag.EquipamentoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TreinoId" class="control-label">Treino pertencente:</label>
                <select asp-for="TreinoId" class ="form-control" asp-items="ViewBag.TreinoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

