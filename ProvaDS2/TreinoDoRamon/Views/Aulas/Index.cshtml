@model IEnumerable<TreinoDoRamon.Models.Aula>

@{
    ViewData["Title"] = "Aulas";
}

<h1>Aulas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Data que realizou o treino
            </th>
            <th>
                Nome/Tipo do treino
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Treino.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AulaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AulaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AulaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
