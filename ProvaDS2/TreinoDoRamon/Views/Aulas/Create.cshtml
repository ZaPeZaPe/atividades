@model TreinoDoRamon.Models.Aula

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Aula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label">Data que realizou a aula: (DD/MM/AAAA)</label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreinoId" class="control-label">Treino Realizado:</label>
                <select asp-for="TreinoId" class ="form-control" asp-items="ViewBag.TreinoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

